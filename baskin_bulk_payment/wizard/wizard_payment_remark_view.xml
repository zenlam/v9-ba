<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_payment_remark_view" model="ir.ui.view">
        <field name="name">Payment Remark</field>
        <field name="model">wizard.payment.remark</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <label string="Open Outstnading Refund, Are you sure want to proceed?" style="font-size:22px; bold:True"/>
                <group string="Remarks">
                    <field name="remarks" nolabel="1"/>
                </group>
                <footer>
                    <button name="apply" string="Yes" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="No" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    
</odoo>
