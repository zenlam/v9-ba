<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock_inventory_wizard_damage_first_form" model="ir.ui.view">
            <field name="name">stock.inventory.wizard.damage.first.form</field>
            <field name="model">stock.inventory.wizard.damage.first</field>
            <field name="arch" type="xml">
                <form string="Inventory Report">
                    <group>
                        <label for="hq_wh" string="Filter"/>
							<div name="hq_wh__outlet_wh">

								<field name="hq_wh"/>
								HQ Warehouses

								<div class="oe_inline"  style="display: inline;">
									<field name="outlet_wh"/>
								</div>
								Outlet Warehouses
							</div>
                        <field name="warehouse_ids" widget="many2many_tags"/>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="product_categ_ids" widget="many2many_tags" context="{'from_wizard': True}"/>
                        <field name="product_ids" widget="many2many_tags" context="{'product_categ_ids': product_categ_ids}"/>
                        <field name="is_lot" />
                        <!-- <field name="report_type" /> -->
                        <field name="uom_type"/>
                    </group>
                    <field name="inv_categ_uom_ids" context="{'parent_categ_ids': product_categ_ids}">
                        <tree string='UoM Type' editable="top">
                            <field name="uom_categ_id" context="{'parent_categ_ids': parent.product_categ_ids}" options="{'no_create_edit':True, 'no_create':True}"/>
                            <field name="uom_type" />
                        </tree>
                    </field>
                    <footer>
                        <button string="Print" name="action_print" type="object" icon="gtk-ok"/>
                        <button string="Cancel" special="cancel" icon="gtk-cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_inventory_wizard_damage_first" model="ir.actions.act_window">
            <field name="name">Damage Detail - 1 Report</field>
            <field name="res_model">stock.inventory.wizard.damage.first</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock_inventory_wizard_damage_first_form"/>
            <field name="target">new</field>
        </record>

        <menuitem 
            id="stock_inventory_wizard_damage_first_menu" 
            name="Damage Detail - 1 Report"
            action="action_stock_inventory_wizard_damage_first"
            parent="stock.menu_warehouse_report"/>

        <report id="stock_inventory_wizard_damage_report_first"
                model="stock.inventory.wizard.damage.first"
                string="Damage Detail - 1 Report"
                report_type="xlsx"
                name="stock_inventory_adj.stock_inventory_adj_damage_report_first"
                file="stock_inventory_adj.stock_inventory_adj_damage_report_first"
                attachment_use="False" />

    </data>
</openerp>
